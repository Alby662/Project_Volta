<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Vacuum Box Test Inspection Report' }) %>

    <body>

        <div class="container">
            <%- include('../partials/header', { reportName: 'VACUUM TEST REPORT', formData: typeof formData !== 'undefined' ? formData : {} }) %>

                <!-- Header Information -->
                <table>
                    <tr>
                        <td>Report No.</td>
                        <td><input type="text" name="report_no" placeholder="Report No."></td>
                        <td>Date</td>
                        <td><input type="text" name="date" placeholder="Date"></td>
                    </tr>
                    <tr>
                        <td>Client</td>
                        <td><input type="text" name="client" placeholder="Client"></td>
                        <td>QA Reference No.</td>
                        <td><input type="text" name="qa_ref_no" placeholder="QA Reference No."></td>
                    </tr>
                    <tr>
                        <td>PO Ref</td>
                        <td><input type="text" name="po_ref" placeholder="PO Ref"></td>
                        <td>Project</td>
                        <td><input type="text" name="project" placeholder="Project"></td>
                    </tr>
                    <tr>
                        <td>QAP</td>
                        <td><input type="text" name="qap" placeholder="QAP"></td>
                        <td>QAP Stage No.</td>
                        <td><input type="text" name="qap_stage_no" placeholder="QAP Stage No."></td>
                    </tr>
                    <tr>
                        <td>Drawing No.</td>
                        <td><input type="text" name="drawing_no" placeholder="Drawing No."></td>
                        <td>Job No.</td>
                        <td><input type="text" name="job_no" placeholder="Job No."></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td><input type="text" name="description" placeholder="Description"></td>
                        <td>Inspection Stage</td>
                        <td><input type="text" name="inspection_stage" placeholder="Inspection Stage"></td>
                    </tr>
                </table>

                <!-- Test Inspection Table -->
                <table>
                    <thead>
                        <tr>
                            <th rowspan="2">Sr No.</th>
                            <th rowspan="2">Item Description</th>
                            <th rowspan="2">Weld Joint No.</th>
                            <th colspan="3">Test Details</th>
                            <th rowspan="2">Remarks</th>
                        </tr>
                        <tr>
                            <th>Parameter</th>
                            <th>Specified</th>
                            <th>Actual</th>
                        </tr>
                    </thead>
                    <tbody id="inspection-body">
                        <!-- Initial Rows -->
                        <tr>
                            <td>1</td>
                            <td><input type="text" name="item_desc" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no" placeholder="Weld Joint No."></td>
                            <td>Vacuum Developed</td>
                            <td><input type="text" name="vacuum_specified" placeholder="Specified"></td>
                            <td><input type="text" name="vacuum_actual" placeholder="Actual"></td>
                            <td><input type="text" name="vacuum_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td><input type="text" name="item_desc_2" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_2" placeholder="Weld Joint No."></td>
                            <td>Vacuum Holding Time</td>
                            <td><input type="text" name="holding_specified" placeholder="Specified"></td>
                            <td><input type="text" name="holding_actual" placeholder="Actual"></td>
                            <td><input type="text" name="holding_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td><input type="text" name="item_desc_3" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_3" placeholder="Weld Joint No."></td>
                            <td>Surface Temperature</td>
                            <td><input type="text" name="surface_temp_specified" placeholder="Specified"></td>
                            <td><input type="text" name="surface_temp_actual" placeholder="Actual"></td>
                            <td><input type="text" name="surface_temp_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td><input type="text" name="item_desc_4" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_4" placeholder="Weld Joint No."></td>
                            <td>Light Intensity</td>
                            <td><input type="text" name="light_specified" placeholder="Specified"></td>
                            <td><input type="text" name="light_actual" placeholder="Actual"></td>
                            <td><input type="text" name="light_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>5</td>
                            <td><input type="text" name="item_desc_5" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_5" placeholder="Weld Joint No."></td>
                            <td>Extent of Examination</td>
                            <td><input type="text" name="extent_specified" placeholder="Specified"></td>
                            <td><input type="text" name="extent_actual" placeholder="Actual"></td>
                            <td><input type="text" name="extent_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>6</td>
                            <td><input type="text" name="item_desc_6" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_6" placeholder="Weld Joint No."></td>
                            <td>Surface Condition</td>
                            <td><input type="text" name="condition_specified" placeholder="Specified"></td>
                            <td><input type="text" name="condition_actual" placeholder="Actual"></td>
                            <td><input type="text" name="condition_remarks" placeholder="Remarks"></td>
                        </tr>
                        <tr>
                            <td>7</td>
                            <td><input type="text" name="item_desc_7" placeholder="Item Description"></td>
                            <td><input type="text" name="weld_joint_no_7" placeholder="Weld Joint No."></td>
                            <td>Acceptable Criteria</td>
                            <td><input type="text" name="criteria_specified" placeholder="Specified"></td>
                            <td><input type="text" name="criteria_actual" placeholder="Actual"></td>
                            <td><input type="text" name="criteria_remarks" placeholder="Remarks"></td>
                        </tr>
                    </tbody>
                </table>

                <!-- Notes -->
                <h3>Notes:</h3>
                <textarea rows="4" name="notes" placeholder="Add your notes here..."></textarea>

                <!-- Footer Signature -->
                <table>
                    <tr>
                        <td>Test Performed By:</td>
                        <td><input type="text" name="performed_by" placeholder="Performed By"></td>
                        <td>Witnessed By:</td>
                        <td><input type="text" name="witnessed_by" placeholder="Witnessed By"></td>
                    </tr>
                    <tr>
                        <td>NPCIL:</td>
                        <td colspan="3"><input type="text" name="npcil_sign" placeholder="NPCIL"></td>
                    </tr>
                </table>
        </div>

        <!-- Script -->
        <script>
            function addRow() {
                const tbody = document.getElementById('inspection-body');
                const rowCount = tbody.rows.length + 1;
                const row = document.createElement('tr');
                row.innerHTML = `
        <td>${rowCount}</td>
        <td><input type="text" name="item_desc" placeholder="Item Description"></td>
        <td><input type="text" name="weld_joint_no" placeholder="Weld Joint No."></td>
        <td><input type="text" name="test_parameter" placeholder="Parameter"></td>
        <td><input type="text" name="value_specified" placeholder="Specified"></td>
        <td><input type="text" name="value_actual" placeholder="Actual"></td>
        <td><input type="text" name="remarks" placeholder="Remarks"></td>
      `;
                tbody.appendChild(row);
            }
        </script>
        <%- include('../partials/footer') %>
    </body>

</html>