<!-- Approval Section Template -->
<div class="approval-section">
    <h3>Approval & Signatures</h3>
    <table class="approval-table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Name & Details</th>
                <th>Signature Upload</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Prepared By</strong></td>
                <td><textarea name="prepared_by" class="report-input" placeholder="Name, Date & Sign"></textarea></td>
                <td><input type="file" name="signature_prepared" accept="image/*" class="signature-upload"></td>
            </tr>
            <tr>
                <td><strong>Reviewed By</strong></td>
                <td><textarea name="reviewed_by" class="report-input" placeholder="Name, Date & Sign"></textarea></td>
                <td><input type="file" name="signature_reviewed" accept="image/*" class="signature-upload"></td>
            </tr>
            <tr>
                <td><strong>Approved By</strong></td>
                <td><textarea name="approved_by" class="report-input" placeholder="Name, Date & Sign"></textarea></td>
                <td><input type="file" name="signature_approved" accept="image/*" class="signature-upload"></td>
            </tr>
        </tbody>
    </table>
</div>